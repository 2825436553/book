<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/look_drawer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/look_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_db"/>


        <LinearLayout
            android:id="@+id/look_onClick"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_centerVertical="true" />



        <!--hand-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_80"
            android:orientation="vertical"
            android:id="@+id/look_lin11">

            <View
                android:id="@+id/look_view"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/look_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        </LinearLayout>

        <!--字体/亮度-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/look_dibu"
            android:id="@+id/look_onClick1"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/look_ziti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/black_80"
                android:orientation="vertical"
                android:padding="18dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/look_img1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="14dp"
                        android:src="@drawable/ic_look_liangdu" />

                    <SeekBar
                        android:id="@+id/look_seekBar1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/look_img2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_look_liangdu" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/look_img3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="16dp"
                        android:src="@drawable/ic_look_ziti" />

                    <SeekBar
                        android:id="@+id/look_seekBar2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/look_img4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="11dp"
                        android:src="@drawable/ic_look_ziti" />


                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <!--主题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/look_dibu"
            android:id="@+id/look_onClick2"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/look_zhiti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/black_80"
                android:orientation="horizontal"
                android:padding="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/look_lin5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:background="@drawable/ic_look_item1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/app_look_jb"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/look_lin6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:background="@drawable/ic_look_item2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/app_look_df"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/look_lin7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:background="@drawable/ic_look_item3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/app_look_cl"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/look_lin8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:background="@drawable/ic_look_item4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/app_look_kh"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>


        <!--bottom-->
        <LinearLayout
            android:id="@+id/look_dibu"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:background="@color/black_80"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/look_lin1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_look_caidan" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/look_lin2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_look_ziti" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/look_lin3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_look_zhuti" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/look_lin4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_look_shoucang" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    <!--侧滑-->
    <LinearLayout
        android:id="@+id/look_drawer_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_db"
        android:layout_gravity="start">
        <View
            android:id="@+id/look_view1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#10000000"/>
        <LinearLayout
            android:id="@+id/look_lin9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:background="#10000000">

            <com.pikachu.book.tools.view.QMUIRadiusImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_author"
                app:qmui_corner_radius="6dp"
                android:id="@+id/look_qmui1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/look_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_A0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/app_name"
                    android:lines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/look_text2"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/app_name"
                    android:textColor="@color/black_70"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/look_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_A0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/app_look_dx"
                    android:lines="1"
                    android:ellipsize="end"
                    android:padding="12dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/look_lin10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>



    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>


