<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:id="@+id/ui_m_book_item_lin">
    <com.pikachu.book.tools.view.QMUIRadiusImageView
        android:id="@+id/ui_m_book_item_qmui"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:qmui_corner_radius="6dp"/>

    <TextView
        android:id="@+id/ui_m_book_item_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_A0"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/app_name"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="14dp"/>



    <TextView
        android:id="@+id/ui_m_book_item_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/app_name"
        android:textColor="@color/black_70"
        android:textSize="14sp" />

</LinearLayout>